<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <LangVersion>10</LangVersion>
    <Nullable>enable</Nullable>
    <WarningsAsErrors>CS8600;CS8602;CS8603</WarningsAsErrors>
    <TargetFrameworks>net6.0;netcoreapp3.1;net8.0</TargetFrameworks>
    <AssemblyTitle>Bearded Utilities Testing</AssemblyTitle>
    <Description>Testing utilities that can be used for testing types from Bearded.Utilities.</Description>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <RepositoryUrl>https://github.com/beardgame/utilities</RepositoryUrl>
    <PackageTags>game-development;gamedev</PackageTags>
    <SuppressTfmSupportBuildWarnings>true</SuppressTfmSupportBuildWarnings>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="FluentAssertions" Version="7.0.0" />
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\Bearded.Utilities\Bearded.Utilities.csproj" />
  </ItemGroup>
</Project>
